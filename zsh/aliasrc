alias nano="nvim"
alias vim="nvim"
alias vi="nvim"

alias pull="git pull"
alias push="git push"
alias commit="git commit"

alias :q="exit"
alias shutdown="poweroff"
alias restart="reboot"

alias cls="clear && neofetch"

alias yay="paru"

[ -f "$HOME/.local.aliasrc" ] && source "$HOME/.local.aliasrc"

